    }                                        

    private void btnborrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtradio.setText("");
        txtbase1.setText("");
        txtlado.setText("");
        txtbase2.setText("");
        txtaltura1.setText("");
        txtaltura2.setText("");
        txtarea1.setText("");
        txtarea2.setText("");
        txtarea3.setText("");
        txtarea4.setText("");
        txtperimetro1.setText("");
        txtperimetro2.setText("");
        txtperimetro3.setText("");
        txtperimetro4.setText("");
        txthipotenusa.setText("");
        txttipo.setText("");
    }                                         

    private void btncalcularActionPerformed(java.awt.event.ActionEvent evt) {                                            
        double radio, base1, lado, base2, altura1, altura2, area1, area2, area3, area4, hipotenusa, perimetro1, perimetro2, perimetro3, perimetro4;
        
        
        radio = Double.parseDouble(txtradio.getText());
        base1 = Double.parseDouble(txtbase1.getText());
        lado = Double.parseDouble(txtlado.getText());
        base2 = Double.parseDouble(txtbase2.getText());
        altura1 = Double.parseDouble(txtaltura1.getText());
        altura2 = Double.parseDouble(txtaltura2.getText());     
        
        area1 = Figuras.calcArea1(radio);
        area2 = Figuras.calcularArea2(base1, altura1);
        area3 = Figuras.calcularArea3(lado);
        area4 = Figuras.calcularArea4(base2, altura2);
        perimetro1 = Figuras.calcularPerímetro1(radio);
        perimetro2 = Figuras.calcularPerímetro2(base1, altura1);
        perimetro3 = Figuras.calcularPerímetro3(lado);
        perimetro4 = Figuras.calcularPerímetro4(base2, altura2);
        hipotenusa = Figuras.calcularHipotenusa(base2, altura2);
        
        if ((base2 == altura2) && (base2 == hipotenusa) && (altura2 == hipotenusa)){
            txttipo.setText("Es un triángulo equilátero"); 
        }else if ((base1 != altura2) && (base1 != hipotenusa) && (altura2 != hipotenusa)){
            txttipo.setText(String.valueOf("Es un triángulo escaleno")); 
        }else{
            txttipo.setText(String.valueOf("Es un triángulo isósceles")); 
        }
        txtarea1.setText(String.valueOf(area1));
        txtarea2.setText(String.valueOf(area2));
        txtarea3.setText(String.valueOf(area3));
        txtarea4.setText(String.valueOf(area4));
        txtperimetro1.setText(String.valueOf(perimetro1));
        txtperimetro2.setText(String.valueOf(perimetro2));
        txtperimetro3.setText(String.valueOf(perimetro3));
        txtperimetro4.setText(String.valueOf(perimetro4));
        txthipotenusa.setText(String.valueOf(hipotenusa));        
    }                                           

