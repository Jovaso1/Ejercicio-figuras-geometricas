Clase:
package figuras_geometricas;

/**
 *
 * @author USER
 */
public class Figuras {
    public static double calcArea1(double radio){
        double area;
        area = Math.round(Math.PI*Math.pow(radio,2));
        return area;
    }  
    public static double calcularPerímetro1(double radio){
        double peri;
        peri = Math.round(2*Math.PI*radio);
        return peri;
    }
    public static double calcularArea2(double base, double altura) {
        double area;
        area = base * altura;
        return area;
    }
    public static double calcularPerímetro2(double base, double altura) {
        double peri;
        peri = (2 * base) + (2 * altura);
        return peri;
    }
    public static double calcularArea3(double lado) {
        double area;
        area = lado*lado;
        return area;
    }
    public static double calcularPerímetro3(double lado) {
        double peri;
        peri = (4*lado);
        return peri;
    }
    public static double calcularArea4(double base, double altura) {
        double area;
        area = Math.round((base * altura) / 2);
        return area;
    }
    public static double calcularPerímetro4(double base, double altura) {
        double peri;
        peri = Math.round(base + ((Math.pow((base*base + altura*altura), 0.5))));
        return peri;
    }
    public static double calcularHipotenusa(double base, double altura) {
        double hipo;
        hipo = Math.round(Math.pow(base*base + altura*altura, 0.5));
        return hipo;
    }
}
